<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    android:background="#C5DCEF">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/important_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="12dp">
            
            <TextView
                android:id="@+id/bike_remain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="6대 남음"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/bike_distance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="200m"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"/>
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/bike_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/important_info_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:text="거치대 이름"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/bike_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/important_info_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bike_name"
            android:layout_marginHorizontal="12dp"
            android:text="(거치대 아이디)"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bike_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/important_info_layout"
            app:layout_constraintEnd_toStartOf="@id/bike_star"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="위치 보기"/>

        <Button
            android:id="@+id/bike_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/bike_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="즐겨찾기 등록"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>